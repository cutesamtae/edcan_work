<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/symbol"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="188dp"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/edcansymbol"/>
    
    <TextView
        android:id="@+id/weare"
        android:fontFamily="@font/suitbold"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#425563"
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/symbol"
        android:text="WE ARE"/>

    <TextView
        android:id="@+id/creator"
        android:fontFamily="@font/suitbold"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#425563"
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weare"
        android:text="CREATORS, EDCAN"/>

    <TextView
        android:id="@+id/id"
        android:fontFamily="@font/suitregular"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#425563"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/creator"
        android:text="아이디"/>

    <EditText
        android:id="@+id/idedit"
        android:fontFamily="@font/suitregular"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="아이디를 입력해주세요"
        android:textSize="15dp"
        android:textColorHint="#98A4AE"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:layout_marginTop="12dp"
        android:background="@drawable/style"/>

    <TextView
        android:id="@+id/passowrd"
        android:fontFamily="@font/suitregular"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#425563"
        android:text="비밀번호"
        app:layout_constraintTop_toBottomOf="@id/idedit"/>
    
    <EditText
        android:id="@+id/passwordedit"
        android:fontFamily="@font/suitregular"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textSize="15dp"
        android:textColorHint="#98A4AE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="비밀번호를 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/passowrd"
        android:layout_marginTop="12dp"
        android:background="@drawable/style"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="142dp"
        android:layout_marginLeft="142dp"
        android:background="#E3E6E8"
        app:layout_constraintTop_toBottomOf="@id/passwordedit"/>

    <Button
        android:id="@+id/login22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="로그인"
        android:fontFamily="@font/suitbold"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/edcanbtn"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="비밀번호 저장"
        android:fontFamily="@font/suitregular"
        android:textColor="#425563"
        app:layout_constraintTop_toBottomOf="@id/login22"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="right"
        android:text="계정을 잊었나요?"
        android:fontFamily="@font/suitregular"
        android:textColor="#425563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="ⓒ 2023 EDCAN"
        android:fontFamily="@font/suitregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login22" />


</androidx.constraintlayout.widget.ConstraintLayout>